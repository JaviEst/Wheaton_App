<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="154dp"
        android:layout_height="94dp"
        android:src="@drawable/w">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="429dp"
        android:layout_height="121dp">

        <Button
            android:id="@+id/dButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="28dp"
            android:text="Directory"
            android:textSize="15dp"
            android:background="@color/wheaton"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/hoursButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/wheaton"
            android:text="Facility Hours and Locations "
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/dButton"
            app:layout_constraintTop_toTopOf="@+id/dButton" />

        <Button
            android:id="@+id/linksButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Important Links"
            android:textSize="15dp"
            android:background="@color/wheaton"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/hoursButton"
            app:layout_constraintStart_toEndOf="@+id/hoursButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="430dp"
        android:layout_height="103dp">

        <Button
            android:id="@+id/clubButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:background="@color/wheaton"
            android:text="Club Sports"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@+id/intButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/intButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/wheaton"
            android:text="Intramurals"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/clubButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/exerciseButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/wheaton"
            android:text="Group Exercise"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/intButton"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="433dp"
        android:layout_height="136dp">

        <Button
            android:id="@+id/calendarButton"
            android:layout_width="206dp"
            android:layout_height="137dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:background="@color/wheaton"
            android:text="Athletics               Calendar "
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="204dp"
            android:layout_height="137dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>










